{
  "name": "jacques",
  "version": "1.0.0",
  "description": "Discord soundboard bot + companion website/api",
  "scripts": {
    "start": "node jacques-bot/jacques-bot.js",

    "testBot": "mocha './jacques-bot/**/*.spec.js'",
    "coverBot": "nyc --reporter=lcovonly --report-dir=./coverage/bot npm run testBot",

    "testApi": "mocha './jacques-api/**/*.spec.js'",
    "coverApi": "nyc --reporter=lcovonly --report-dir=./coverage/api npm run testApi",

    "liveServerWeb": "live-server --open=jacques-web --watch=jacques-web/**",
    "testWeb": "karma start",
    "coverWeb": "npm run testWeb",

    "testCommon": "mocha './jacques-common/**/*.spec.js'",
    "coverCommon": "nyc --reporter=lcovonly --report-dir=./coverage/common npm run testCommon",

    "test": "npm-run-all -p -l testBot testApi testWeb testCommon --silent",
    "cover": "npm-run-all -p -l coverBot coverApi coverWeb coverCommon --silent",
    "coveralls": "npm run cover && grunt lcovMerge && cat ./coverage/lcov-all.info | coveralls"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "author": "Steven Brown",
  "license": "Apache-2.0",
  "dependencies": {
    "@uirouter/angularjs": "1.0.11",
    "angular": "1.5.9",
    "angular-animate": "1.5.9",
    "angular-aria": "1.5.9",
    "angular-chart.js": "1.1.1",
    "angular-material": "1.1.3",
    "angular-messages": "1.5.9",
    "angular-mocks": "1.5.9",
    "angular-resource": "1.5.9",
    "app-root-path": "2.0.1",
    "bluebird": "3.5.1",
    "body-parser": "1.16.1",
    "chart.js": "2.5.0",
    "coveralls": "2.13.1",
    "discord.js": "11.2.1",
    "dotenv": "4.0.0",
    "express": "4.14.1",
    "express-rate-limit": "2.11.0",
    "lf-ng-md-file-input": "1.5.3",
    "mkdirp": "0.5.1",
    "moment": "2.20.1",
    "mongoose": "4.8.1",
    "mongoose-sanitizer": "1.0.0",
    "node-opus": "^0.2.4",
    "readdirp": "2.1.0",
    "uid-generator": "1.0.0",
    "winston": "2.3.1",
    "ytdl-core": "0.14.1"
  },
  "devDependencies": {
  	"chai": "3.5.0",
    "cors": "2.8.4",
    "grunt": "1.0.1",
    "grunt-lcov-merge": "1.2.3",
    "jasmine-core": "2.6.1",
    "karma": "1.6.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-jasmine": "1.1.0",
    "karma-phantomjs-launcher": "1.0.4",
    "mocha": "3.3.0",
    "npm-run-all": "4.0.2",
    "nyc": "11.4.1",
    "sinon": "2.2.0"
  }
}
