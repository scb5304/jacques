link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
link(href='https://code.getmdl.io/1.3.0/material.blue_grey-orange.min.css', rel='stylesheet')
link(href='css/styles.css', rel='stylesheet')
script(defer, src="https://code.getmdl.io/1.3.0/material.min.js")

html
	head
		title Jacques
	body
		include partial/nav
		main.mdl-layout__content
			div.page-content
				div.mdl-grid
					each sound in sounds
						div.mdl-cell.mdl-cell--2-col
							div.sound-card.mdl-card.mdl--shadow--2dp
								div.mdl-card__title.mdl-card--expand
									span.mdl-card__title-text #{sound.name}
								div.mdl-card__actions
									<a href="http://en.wikipedia.org/wiki/Sky_Tower_%28Auckland%29">Wikipedia entry</a>
								div.mdl-layout-spacer
